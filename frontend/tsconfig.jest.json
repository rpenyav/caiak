{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@domain/*": ["src/domain/*"],
      "@ui/*": ["src/ui/*"]
    },

    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": [
    "src",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__test__/**/*"
  ]
}
