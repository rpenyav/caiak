#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

# Carpeta del proyecto = padre de .husky (frontend/)
PROJECT_DIR="$(cd -- "$(dirname "$0")/.." && pwd)"

# 1) Validar mensaje con commitlint instalado en frontend/
yarn --cwd "$PROJECT_DIR" commitlint --edit "$1" || exit 1
# 2) Bump de versi√≥n apuntando al script dentro de frontend/scripts/
node "$PROJECT_DIR/scripts/bump-version.cjs" "$1"
